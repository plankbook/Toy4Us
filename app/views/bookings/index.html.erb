<div class="card-category" style="background-image: linear-gradient(rgba(250,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.freepik.com/premium-photo/warm-orange-purple-grunge-background-with-cement-faint-texture-marble-gradient_28629-604.jpg)">
  You've booked the following toys. Have fun!
</div>

<div class='container'>
  <div class="cards" id='all-toys'>
    <% @user_bookings.each do |booking| %>
      <div class="card-trip">
        <% booking.toy.photos.each do |photo| %>
          <%= cl_image_tag photo.key, crop: :fill %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to booking.toy.name, toy_path(booking.toy) %></h2>
            <p>Between <%= booking.start_date %> and <%= booking.end_date %></p>
            <%# <a href=#>üóëÔ∏è Cancel this booking</a> %>
            <%# raise %>
            <%= link_to booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
              <img src="https://p7.hiclipart.com/preview/833/287/785/check-mark-international-red-cross-and-red-crescent-movement-american-red-cross-clip-art-red-cross-mark-download-png.jpg" class="card-trip-user avatar-bordered"/>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
